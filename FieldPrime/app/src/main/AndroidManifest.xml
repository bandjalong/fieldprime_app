<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csiro.fieldprime"
    android:versionCode="527"
    android:versionName="FieldPrime v1.1.7 - June 28 2016 " >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name="csiro.fieldprime.Globals" 
        android:supportsRtl="true">
        <activity
            android:name="csiro.fieldprime.ActMain"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="csiro.fieldprime.FileBrowse" android:screenOrientation="portrait" ></activity>
        <activity android:name="csiro.fieldprime.Preferences" android:screenOrientation="portrait"></activity>
        <activity android:name="csiro.fieldprime.ActAbout" android:screenOrientation="portrait"></activity>
        <activity android:name="csiro.fieldprime.ActTUNotes" android:screenOrientation="portrait"> </activity>
        <activity android:name="csiro.fieldprime.ActBluetooth" android:screenOrientation="portrait"></activity>
        <activity android:name="csiro.fieldprime.ActScoreSets" android:screenOrientation="portrait"></activity>
        <activity android:name="csiro.fieldprime.ActTrial" android:screenOrientation="portrait"></activity>
        <activity android:name="csiro.fieldprime.ActMainTrialList" android:screenOrientation="portrait"></activity>
        </application>
</manifest>