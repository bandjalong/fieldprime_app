<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Styles for Scoring -->
    <style name="scoreHLayoutItem" parent="whiteOnBlack">
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">40sp</item>
    </style>


    <style name="scoreVLayoutItem" parent="whiteOnBlack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/silver</item>
    </style>
    
    <style name="scoreVLayoutBiggerItem" parent="whiteOnBlack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@color/silver</item>
    </style>
    
     <style name="scoreHLayoutBiggerItem" parent="whiteOnBlack">
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">40sp</item>
    </style>
    
    <style name="buttonBar" parent="@android:style/ButtonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
    </style>
    
</resources>