<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Colour Schemes: -->
    <style name="whiteOnBlack">
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="blackOnWhite">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <!-- Styles for Scoring -->

    
    <style name="horizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dip</item>
        <item name="android:background">#FFFFFF</item>
    </style>
    
    <style name="scoreHLayoutItem" parent="whiteOnBlack">
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="scoreVLayoutItem" parent="whiteOnBlack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <!--  <item name="android:background">@color/silver</item> -->
    </style>

    <style name="scoreVLayoutBiggerItem" parent="whiteOnBlack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <!-- <item name="android:background">@color/silver</item> -->
    </style>

    <style name="scoreHLayoutBiggerItem" parent="whiteOnBlack">
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="buttonBar" parent="@android:style/ButtonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

</resources>