<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Template" />
    <EditText
        android:id="@+id/zpTemplate"
        android:inputType="textMultiLine" 
    	android:lines="8"
	    android:minLines="6"
	    android:gravity="top|left"
	    android:maxLines="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Template" />
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top of Form" />
    <EditText
        android:id="@+id/zpTopOfForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Top of form"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Label Height" />
    <EditText
        android:id="@+id/zpLabelHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Label height"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top of Form" />
    <EditText
        android:id="@+id/zpXoffset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="X Offset"
        android:inputType="number" />

    
    <CheckBox
        android:id="@+id/zpCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Center text on label" />

</LinearLayout>
