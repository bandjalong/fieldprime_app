<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csiro.fieldprime"
    android:versionCode="491"
    android:versionName="FieldPrime v1.1.beta.2 - October 26 2015 " >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name="csiro.fieldprime.Globals"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="csiro.fieldprime.ActMain"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="csiro.fieldprime.FileBrowse"
            android:screenOrientation="portrait" />
        <activity
            android:name="csiro.fieldprime.Preferences"
            android:screenOrientation="portrait" />
        <activity
            android:name="csiro.fieldprime.ActAbout"
            android:screenOrientation="portrait" />
        <activity
            android:name="csiro.fieldprime.ActTUNotes"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="csiro.fieldprime.ActBluetooth"
            android:screenOrientation="portrait" />
        <activity
            android:name="csiro.fieldprime.ActScoreSets"
            android:screenOrientation="portrait" />
        <activity
            android:name="csiro.fieldprime.ActTrial"
            android:screenOrientation="portrait" />
        <activity
            android:name="csiro.fieldprime.ActMainTrialList"
            android:screenOrientation="portrait" />
    </application>

</manifest>